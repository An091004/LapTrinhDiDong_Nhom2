  "components": {
    "schemas": {
      "ForgotPasswordDto": {
        "required": [
          "email"
        ],
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LoginRequest": {
        "required": [
          "email",
          "matKhau"
        ],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "matKhau": {
            "minLength": 1,
            "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d).{6,}$",
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "NguoiDung": {
        "required": [
          "email",
          "matKhau",
          "soDienThoai",
          "tenDangNhap"
        ],
        "type": "object",
        "properties": {
          "maNguoiDung": {
            "type": "integer",
            "format": "int32"
          },
          "tenDangNhap": {
            "minLength": 1,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "soDienThoai": {
            "minLength": 1,
            "pattern": "^(0|\\+84)(\\d{9})$",
            "type": "string"
          },
          "matKhau": {
            "minLength": 1,
            "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d).{6,}$",
            "type": "string"
          },
          "anhDaiDien": {
            "type": "string",
            "nullable": true
          },
          "ngayTao": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "OtpVerifyDto": {
        "required": [
          "email",
          "otpCode"
        ],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "otpCode": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ResetPasswordDto": {
        "required": [
          "email",
          "newPassword",
          "otpCode"
        ],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "otpCode": {
            "minLength": 1,
            "type": "string"
          },
          "newPassword": {
            "minLength": 1,
            "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d).{6,}$",
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "UpdateUserRequest": {
        "required": [
          "email",
          "soDienThoai",
          "tenDangNhap"
        ],
        "type": "object",
        "properties": {
          "tenDangNhap": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "soDienThoai": {
            "minLength": 1,
            "pattern": "^(0|\\+84)(\\d{9})$",
            "type": "string"
